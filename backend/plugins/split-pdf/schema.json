{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["mode"],
  "properties": {
    "mode": {
      "type": "string",
      "enum": ["range", "fixed", "extract"],
      "default": "range",
      "title": {
        "en": "Split Mode",
        "zh": "分割模式"
      },
      "enumLabels": {
        "range": { "en": "By Page Range", "zh": "按页码范围" },
        "fixed": { "en": "Fixed Pages", "zh": "固定页数" },
        "extract": { "en": "Extract Pages", "zh": "提取页面" }
      },
      "enumDescriptions": {
        "range": { "en": "Split by specific page ranges (e.g., 1-3, 5, 8-10)", "zh": "按特定页码范围分割（例如：1-3, 5, 8-10）" },
        "fixed": { "en": "Split into files with fixed number of pages", "zh": "分割为固定页数的文件" },
        "extract": { "en": "Extract specific pages into one file", "zh": "提取特定页面到一个文件" }
      },
      "ui:widget": "radio-cards"
    },
    "range": {
      "type": "string",
      "title": {
        "en": "Page Range",
        "zh": "页码范围"
      },
      "placeholder": {
        "en": "e.g., 1-3, 5, 8-10",
        "zh": "例如：1-3, 5, 8-10"
      },
      "description": {
        "en": "Enter comma-separated page ranges",
        "zh": "输入用逗号分隔的页码范围"
      },
      "ui:showIf": { "mode": "range" }
    },
    "pagesPerFile": {
      "type": "integer",
      "minimum": 1,
      "title": {
        "en": "Pages Per File",
        "zh": "每个文件的页数"
      },
      "placeholder": {
        "en": "e.g., 5",
        "zh": "例如：5"
      },
      "description": {
        "en": "Number of pages per output file",
        "zh": "每个输出文件的页数"
      },
      "ui:showIf": { "mode": "fixed" }
    },
    "pages": {
      "type": "string",
      "title": {
        "en": "Pages to Extract",
        "zh": "要提取的页码"
      },
      "placeholder": {
        "en": "e.g., 1, 3, 7",
        "zh": "例如：1, 3, 7"
      },
      "description": {
        "en": "Enter comma-separated page numbers",
        "zh": "输入用逗号分隔的页码"
      },
      "ui:showIf": { "mode": "extract" }
    }
  },
  "ui:submitButton": {
    "text": {
      "en": "Split PDF",
      "zh": "分割 PDF"
    },
    "loadingText": {
      "en": "Processing...",
      "zh": "处理中..."
    }
  }
}
