{
  "upload": {
    "multiple": false,
    "maxFiles": 1,
    "types": ["pdf"],
    "maxSize": 52428800
  },
  "options": [
    {
      "name": "mode",
      "type": "select",
      "label": {
        "en": "Split Mode",
        "zh": "分割模式"
      },
      "choices": [
        {
          "value": "range",
          "label": { "en": "By Page Range", "zh": "按页码范围" }
        },
        {
          "value": "fixed",
          "label": { "en": "Fixed Pages", "zh": "固定页数" }
        },
        {
          "value": "extract",
          "label": { "en": "Extract Pages", "zh": "提取页面" }
        }
      ],
      "default": "range"
    },
    {
      "name": "range",
      "type": "text",
      "label": {
        "en": "Page Range",
        "zh": "页码范围"
      },
      "placeholder": {
        "en": "e.g., 1-3, 5, 8-10",
        "zh": "例如：1-3, 5, 8-10"
      },
      "showIf": { "mode": "range" }
    },
    {
      "name": "pagesPerFile",
      "type": "number",
      "label": {
        "en": "Pages Per File",
        "zh": "每个文件的页数"
      },
      "placeholder": {
        "en": "e.g., 5",
        "zh": "例如：5"
      },
      "showIf": { "mode": "fixed" }
    },
    {
      "name": "pages",
      "type": "text",
      "label": {
        "en": "Pages to Extract",
        "zh": "要提取的页码"
      },
      "placeholder": {
        "en": "e.g., 1, 3, 7",
        "zh": "例如：1, 3, 7"
      },
      "showIf": { "mode": "extract" }
    }
  ],
  "submitText": {
    "en": "Split PDF",
    "zh": "分割 PDF"
  },
  "outputType": "file"
}
